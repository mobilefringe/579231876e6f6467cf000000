<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        prefix = get_prefix();
        var pages_json = prefix + "/pages/ptc-act-always-consider-tomorrow.json"
        $.getJSON(pages_json).done(function(data) {
            $('#mm_page_title').html(data.title);
            $('#mm_page_content').html(data.body);
        }).fail(function(jqXHR) {
            if (jqXHR.status == 404) {
                $("#mm_page_content").html("Sorry we can't find the page you're looking for.");
            }
        }); 
        show_content();
    }
</script>