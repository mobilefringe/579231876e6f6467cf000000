<script>

    
   function contestIntoMM(){
        var contest = {};
        contest["property_id"] = 52;
        contest["first_name"] =  $('#first_name').val();
        contest["last_name"] =  $('#last_name').val();
        contest["postal_code"] =  $('#fieldzdyti').val();
        contest["birthday"] = $('#year_birth').val();
        contest["contest_id"] = $('#contest_id').val();
        contest["email"] = $('#email').val();
        contest["notes"] = $('#reason').val();
        contest["province"] = $('#province').val();
        contest["newsletter"] = 0;
       
        var dataContest ={};
        dataContest['contest'] = contest;
        $.ajax({
            url: "/newsletter_no_captcha",
            type: "POST",
             async: false,         
            data: dataContest,
            success: function(response){                        
                
            },
            error: function(xhr, ajaxOptions, thrownError){
            }
        });
    }
    
    function validateForm() {
        var str1 = $("#first_name").val();
        var str2 = $("#last_name").val();
        var fullname = str1+" "+str2;
        $("#cm-name").attr('value', fullname);
        if(limitWord() != true){
            alert("Please enter below 500 words!");
            $("#reason").focus();  
            return false;
        }else if ($("#agree_terms").prop("checked") != true){
            alert("Please agree to the term and conditions before submitting the contest.");
            $("#agree_terms").focus();
            return false;
        }
        contestIntoMM();

    }
    
    function limitWord(){
        var count = 0;
        var len = 0;
        var text = $('#reason').val();
        var words = text.split(" ");
        for(i = 0; i < words.length; i++){
            if(words[i] != ''){
                count ++;
            }
        }
        if (count < 500){
            return true;
        }else{
            return false;
        }
    }
</script>  
