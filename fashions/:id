<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        var fashion = getFashionBySlug(slug);
        if (fashion != undefined){
            var gallery_images = fashion.fashion_images
            renderGallery("#fashion_images_container", "#fashion_images_template", gallery_images);
        }
        show_content();
    }
</script>