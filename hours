<script>
    $(document).ready(function(e){
        init(e);
        
    }
    
    function renderAll(){
        var hours = getPropertyHours();
        renderHours('#reg_hours_container','#reg_hours_template', hours, 'reg_hours')
        renderHours('#holiday_hours_container','#holiday_hours_template', hours, 'holiday_hours')
        show_content();
    }
</script>